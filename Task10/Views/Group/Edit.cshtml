@model Group

<div>
    
    <div>
        <h2>Edit group</h2>
    </div>
    
    <div>
        <form asp-action="Edit" asp-controller="Group" asp-route-courseId="@ViewBag.CourseId">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" >
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        
    </div>
</div>